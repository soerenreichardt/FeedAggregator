<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user-info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
	<div class="col-md-8">
		<% if @user.feeds.any? %>
			<h3>Subscribed feeds (<%= @user.feeds.count %>)</h3>
			<ol class="feeds">
				<%= render @feeds %>
			</ol>
			<%= will_paginate @feeds %>
		<% end %>
	</div>
</div>