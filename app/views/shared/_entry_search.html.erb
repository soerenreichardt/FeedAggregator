<div class="container">
	<div class="row">
		<%= form_tag path, method: :get, class: 'input-group' do %>
			<%= text_field_tag :search, params[:search], class: 'form-control search-form', placeholder: 'Search' %>
			<div class="input-group-btn">
				<%= button_tag(type: 'submit', class: 'btn btn-default') do %>
					<i class="glyphicon glyphicon-search"></i>
				<% end %>
			</div>
		<% end %>
		<br \>
	</div>
</div>